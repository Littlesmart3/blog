{
  "compilerOptions": {
    "strict": true,
    "target": "ES2018",
    "module": "CommonJS",
    "moduleResolution": "node",
    "importHelpers": true,
    "types": [
      "vite/client"
    ],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "src/*"
      ],
    },
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src",
    "typings"
  ]
}